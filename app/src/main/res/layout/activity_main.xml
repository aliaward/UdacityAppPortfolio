<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="projects.androidstudio.award.appportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:id="@+id/titleText"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="POPULAR MOVIES"
        android:background="#E64A19"
        android:id="@+id/projectOne"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projectOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="STOCK HAWK"
        android:background="#E64A19"
        android:id="@+id/projectTwo"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projectTwo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="BUILD IT BIGGER"
        android:background="#E64A19"
        android:id="@+id/projectThree"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projectThree"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="MAKE YOUR APP MATERIAL"
        android:background="#E64A19"
        android:id="@+id/projectFour"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projectFour"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="GO UBIQUITOUS"
        android:background="#E64A19"
        android:id="@+id/projectFive"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projectFive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="CAPSTONE: MY OWN APP"
        android:background="#BF360C"
        android:textColor="#FFFFFF"
        android:id="@+id/projectSix"
        android:onClick="sendMessage" />
</RelativeLayout>
