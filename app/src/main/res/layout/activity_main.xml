<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    android:fillViewport="false">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projects.androidstudio.award.appportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_title"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/titleText"/>

    <Button
        android:layout_below="@+id/titleText"
        android:text="@string/projectOne"
        android:id="@+id/projectOne"
        style="@style/projectButton" />

    <Button
        android:layout_below="@+id/projectOne"
        android:text="@string/projectTwo"
        android:id="@+id/projectTwo"
        style="@style/projectButton" />

    <Button
        android:layout_below="@+id/projectTwo"
        android:text="@string/projectThree"
        android:id="@+id/projectThree"
        style="@style/projectButton" />

    <Button
        android:layout_below="@+id/projectThree"
        android:text="@string/projectFour"
        android:id="@+id/projectFour"
        style="@style/projectButton" />

    <Button
        android:layout_below="@+id/projectFour"
        android:text="@string/projectFive"
        android:id="@+id/projectFive"
        style="@style/projectButton" />

    <Button
        android:layout_below="@+id/projectFive"
        android:text="@string/projectSix"
        style="@style/projectButton"
        android:background="@color/capstone"
        android:textColor="@color/white"
        android:id="@+id/projectSix" />
</RelativeLayout>
</ScrollView>